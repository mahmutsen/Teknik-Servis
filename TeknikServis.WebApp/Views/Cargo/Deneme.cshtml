@model TeknikServis.Entities.Cargo

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { onsubmit = "return confirm('Onayladığınız takdirde cihaz sahibine bildirim gönderilecektir.Oluşturmak istediğinize emin misiniz?');" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Cargo</h4>
    <hr />
    @Html.ValidationSummary(false)
    @Html.HiddenFor(model => model.ProductId)
    @Html.HiddenFor(model => model.IsArrived)

    <div class="form-group">
        @Html.DisplayNameFor(model => model.Firm)
        <div>
            @Html.EditorFor(model => model.Firm, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(model => model.TrackerNo)
        <div>
            @Html.EditorFor(model => model.TrackerNo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>


    <br />

    <div class="form-group">
        <div>
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
