@model TeknikServis.Entities.Cargo
@{
    ViewBag.Title = "LimitedEdit";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>Düzenle</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-8 col-md-offset-2">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Kargo</h4>
                <hr />
                @Html.ValidationSummary(false)
                @Html.HiddenFor(model => model.ProductId)

                <div class="form-group">
                    @Html.LabelFor(model => model.ProductId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ProductId, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Firm, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Firm, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TrackerNo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TrackerNo, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsArrived, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-1">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.IsArrived, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>

                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @MyBootstrap.Button("submit", "success", string.Empty, "floppy-saved", " Kaydet")
                        @MyBootstrap.LinkButton("/Cargo/Index", "default", string.Empty, string.Empty, "arrow-left", " Geri Dön")
                    </div>
                </div>
            </div>
        }

</div>
</div>