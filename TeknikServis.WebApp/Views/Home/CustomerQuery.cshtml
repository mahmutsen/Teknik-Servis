@using TeknikServis.Entities.ViewModelObjects
@model QueryViewModel

@{
    ViewBag.Title = "CustomerQuery";
}

<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <div class="container col-md-8 col-md-offset-2">
        <div class="row">
            <div class="panel-heading">
                <div class="panel-title text-center">
                    <h1 class="title"><i>MMS Teknik Servis</i></h1>
                    <hr />
                    <h2><i>Sayın Müşterimiz:</i></h2><br />
                    <h3>
                        <span class="label label-info">
                            Cihazınızın durumunu <i>IMEI No</i> veya <i>Form No</i> ile sorgulayabilirsiniz.
                        </span>
                    </h3>
                </div>
            </div>
            <div class="main-login">
                <div class="row">
                    <div class="form-group col-md-4 col-md-offset-1">
                        <label class="control-label">Imei No:</label>
                        <div>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>

                                @Html.TextBoxFor(model => model.İmeiNo, new { @class = "form-control", placeholder = "Cihaz Imei Numarası" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-4 col-md-offset-1">
                        <label class="control-label">Form No:</label>
                        <div>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>

                                @Html.TextBoxFor(model => model.FormNo, new { @class = "form-control", placeholder = "E-posta Adresiniz" })
                            </div>
                        </div>
                    </div>

                    @*<div class="form-group col-md-4">
                        <label class="control-label">E-posta:</label>
                        <div>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-lock fa" aria-hidden="true"></i></span>

                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Şifreniz" })
                            </div>
                        </div>
                    </div>*@

                    @Html.ValidationSummary(false)
                    <div class="form-group col-md-4 col-md-offset-4">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Ara</button>

                    </div>
                </div>
            </div>
            <hr />
            <hr />
        </div>
    </div>
}

