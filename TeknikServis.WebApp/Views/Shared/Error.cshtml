@using TeknikServis.Entities.Messages
@using TeknikServis.WebApp.ViewModels
@model ErrorViewModel

@{
    ViewBag.Title = Model.Title;
}

<div class="row">

    <div class="panel panel-primary text-center col-lg-4 col-md-4 col-lg-offset-4 col-md-offset-4">
        <div class="panel-heading">
            <h3 class="panel-title">@Model.Header</h3>
        </div>
        <div class="panel-body text-danger">
            <hr />
            <h4 class="text-left"><span class="glyphicon glyphicon-remove-sign">&nbsp;&nbsp;</span>@Model.Title</h4>
            <p class="text-justify">
                @foreach ( ErrorMessageObj msg in Model.Items)
                {
                    @msg.Message<br />
                }
            </p>
        </div>
    </div>
</div>

@{
    string js = string.Empty;

    if (Model.IsRedirecting)
    {
        js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "'; }, " + Model.RedirectingTimeOut + ")";
    }
}

<script>
        @Html.Raw(js);
</script>



